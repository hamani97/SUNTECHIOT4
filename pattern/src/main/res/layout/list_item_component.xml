<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_item_idx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="idx"
                android:textSize="20sp"
                android:textColor="#333"/>

        <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Name"
                android:textSize="20sp"
                android:textColor="#333"/>

        <TextView
                android:id="@+id/tv_item_total_cycle_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Total Cycle Time"
                android:textSize="20sp"
                android:textColor="#333"/>

        <TextView
                android:id="@+id/tv_item_now_cycle_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Now Cycle Time"
                android:textSize="20sp"
                android:textColor="#333"/>

        <TextView
                android:id="@+id/tv_item_remain_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="-"
                android:textSize="20sp"
                android:textColor="#333"/>

        <TextView
                android:id="@+id/tv_item_remain_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="-"
                android:textSize="20sp"
                android:textColor="#333"/>
    </LinearLayout>

</LinearLayout>
