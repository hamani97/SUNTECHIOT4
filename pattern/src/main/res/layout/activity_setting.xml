                        <TextView style="@style/table_row_title" android:text="@string/label_seconds"
                                  android:layout_width="0dp" android:layout_weight="1"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--Target setting-->
