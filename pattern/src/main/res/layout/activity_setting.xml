                                android:textColor="@color/colorGray"
                                android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout style="@style/tab_block" android:layout_marginTop="8dp">
                        <Button
                                android:id="@+id/btn_server_accumulate"
                                style="@style/tab_btn_off"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:stateListAnimator="@null"
                                android:text="@string/button_accumulation_by_start" />
                        <Button
                                android:id="@+id/btn_server_shifttotal"
                                style="@style/tab_btn_off"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:stateListAnimator="@null"
                                android:text="@string/button_total_target_per_shift" />
                    </LinearLayout>

                    <LinearLayout style="@style/table_row" android:layout_marginTop="20dp">
                        <TextView
                                android:id="@+id/tv_setting_target_type_manual2"
                                style="@style/table_row_title"
                                android:layout_width="200dp"
                                android:background="@color/colorBackgroundTop"
                                android:text="@string/label_from_device"
                                android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout style="@style/tab_block" android:layout_marginTop="8dp">
                        <Button
                                android:id="@+id/btn_manual_accumulate"
                                style="@style/tab_btn_off"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:stateListAnimator="@null"
                                android:text="@string/button_accumulation_by_start" />
                        <Button
                                android:id="@+id/btn_manual_shifttotal"
                                style="@style/tab_btn_off"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:stateListAnimator="@null"
                                android:text="@string/button_total_target_per_shift" />
                    </LinearLayout>

                    <LinearLayout style="@style/table_row" android:layout_marginTop="20dp">
                        <TextView
                                style="@style/table_row_title"
                                android:layout_width="250dp"
                                android:background="@color/colorBackgroundTop"
                                android:text="@string/label_target_per_shift"
                                android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="60dp"
                                android:orientation="horizontal">
                            <LinearLayout style="@style/table_row">
                                <TextView style="@style/table_row_title" android:text="@string/label_shift1" />
                                <EditText android:id="@+id/tv_shift_1" style="@style/table_row_data_editor1" android:singleLine="true" android:inputType="number" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="60dp"
                                android:orientation="horizontal">
                            <LinearLayout style="@style/table_row">
                                <TextView style="@style/table_row_title" android:text="@string/label_shift2" />
                                <EditText android:id="@+id/tv_shift_2" style="@style/table_row_data_editor1" android:text="0" android:singleLine="true" android:inputType="number" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <LinearLayout style="@style/table_row">
                                <TextView style="@style/table_row_title" android:text="@string/label_shift3" />
                                <EditText android:id="@+id/tv_shift_3" style="@style/table_row_data_editor1" android:text="0" android:singleLine="true" android:inputType="number" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--Etc setting-->
            <LinearLayout
                    android:id="@+id/layout_setting_etc"
                    android:layout_width="1080dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                <LinearLayout
                        android:layout_width="520dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:orientation="vertical">

                    <TextView style="@style/table_title" android:text="@string/title_time" />

                    <!-- Server time -->
                    <LinearLayout style="@style/table_row">
                        <TextView style="@style/table_row_title" android:layout_width="240dp" android:text="@string/label_server_time" />
                        <TextView style="@style/table_row_data_readonly" android:id="@+id/tv_setting_server_time" />
                    </LinearLayout>

                    <!-- Device time -->
                    <LinearLayout style="@style/table_row">
                        <TextView style="@style/table_row_title" android:layout_width="240dp" android:text="@string/label_device_time" />
                        <TextView style="@style/table_row_data_readonly" android:id="@+id/tv_setting_time" />
                    </LinearLayout>



                    <TextView style="@style/table_title" android:text="@string/title_downtime" android:layout_marginTop="20dp"/>

                    <LinearLayout
                            android:layout_width="520dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <LinearLayout style="@style/table_row">
                            <TextView style="@style/table_row_title" android:text="@string/label_downtime_blink_effect"
                                      android:layout_width="240dp" />
                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:background="@color/colorDefault">
                                <Switch
                                        android:id="@+id/sw_screen_blink_effect"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="60dp"
                                        android:layout_marginLeft="12dp"
                                        android:checked="false"/>
                            </LinearLayout>
                        </LinearLayout>
                        <!--<LinearLayout style="@style/table_row">-->
                            <!--<TextView style="@style/table_row_title" android:text="@string/label_remaining_number"-->
                                      <!--android:layout_width="240dp" />-->
                            <!--<EditText-->
