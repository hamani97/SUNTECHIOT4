                    <!-- MC Serial -->
                    <LinearLayout style="@style/table_row">
                        <TextView style="@style/table_row_title" android:text="@string/label_mc_serial" />
                        <EditText style="@style/table_row_data_editor1" android:id="@+id/et_setting_mc_serial" />
                    </LinearLayout>
                </LinearLayout>

                <!-- OEE SERVER INFO -->
                <LinearLayout
