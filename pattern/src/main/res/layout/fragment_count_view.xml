<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".CountViewFragment">

    <!--Design file Web View-->
    <LinearLayout
            android:id="@+id/ll_component_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            android:visibility="gone">
        <WebView
                android:id="@+id/wv_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>

    <!--Total View Count-->
    <LinearLayout
            android:id="@+id/ll_total_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@color/colorBackground">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorBackground">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="70dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="@string/label_target"
                                android:textSize="110sp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/tv_count_view_target"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="0"
                                android:textSize="110sp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="@string/label_actual"
                                android:textSize="110sp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/tv_count_view_actual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="0"
                                android:textSize="110sp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:gravity="start"
                                android:orientation="vertical">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_rate"
                                    android:textSize="110sp"
                                    android:textColor="#fff"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:id="@+id/tv_current_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="2000-01-01"
                                    android:textSize="26sp"
                                    android:textColor="#fff" />
                        </LinearLayout>
                        <RelativeLayout
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent">
                            <ImageButton
                                    android:id="@+id/btn_defective_plus"
                                    android:layout_width="190dp"
                                    android:layout_height="190dp"
                                    android:background="@drawable/ic_defective_orange_64dp"
                                    android:stateListAnimator="@null"/>
                            <!--<ImageButton-->
                                    <!--android:id="@+id/btn_defective_plus"-->
                                    <!--android:layout_width="match_parent"-->
                                    <!--android:layout_height="match_parent"-->
                                    <!--android:background="@mipmap/btn_icon_defective"-->
                                    <!--android:stateListAnimator="@null"/>-->
                            <TextView
                                    android:layout_width="18dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:text=" "
                                    android:textSize="40sp"
                                    android:background="#FFCA18"/>

                            <TextView
                                    android:id="@+id/tv_defective_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/shape_red_round_button"
                                    android:layout_marginTop="66dp"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="0dp"
                                    android:paddingRight="7dp"
                                    android:paddingLeft="7dp"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textSize="45sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorWhite"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="135dp"
                                    android:text="@string/list_item_defective"
                                    android:textSize="21sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlack2"/>

                            <LinearLayout android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:orientation="horizontal"
                                          android:layout_marginTop="170dp"
                                          android:visibility="visible"
                                          android:layout_centerHorizontal="true">
                                <TextView
                                        android:id="@+id/tv_pieces_qty"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:text="0"
                                        android:textSize="26sp"
                                        android:textColor="@color/colorWhite" />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:text="  /  "
                                        android:textSize="26sp"
                                        android:textColor="@color/colorWhite" />
                                <TextView
                                        android:id="@+id/tv_pairs_qty"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:text="0"
                                        android:textSize="26sp"
                                        android:textColor="@color/colorWhite" />
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical">
                            <TextView
                                    android:id="@+id/tv_count_view_ratio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="0%"
                                    android:textSize="110sp"
                                    android:textColor="#fff"
                                    android:textStyle="bold"/>
                            <Button
                                    android:id="@+id/btn_init_actual"
                                    style="@style/btn_default"
                                    android:stateListAnimator="@null"
                                    android:text="@string/edit" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- 서버차트 -->
                <LinearLayout
                        android:id="@+id/ll_server_charts"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#222222"
                        android:visibility="visible">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="OEE"
                            android:textSize="15sp"
                            android:textColor="@color/colorWhite2"
                            android:background="#383838" />
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <com.dinuscxj.progressbar.CircleProgressBar
                                android:id="@+id/oee_progress"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                app:background_color="@color/colorWhite"
                                app:progress_start_color="#ff0000"
                                app:progress_end_color="#ff0000"
                                app:progress_background_color="@color/colorWhite"
                                app:progress_text_color="@color/colorBlack"
                                app:draw_progress_text="false"
                                app:progress_text_size="24dp"
                                app:style="solid"
                                android:progress="0"/>
                        <TextView
                                android:id="@+id/tv_oee_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="0%"
                                android:textSize="27sp"
                                android:textColor="#000"/>
                    </RelativeLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/availability"
                            android:textSize="15sp"
                            android:textColor="@color/colorWhite2"
                            android:background="#383838" />
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <com.dinuscxj.progressbar.CircleProgressBar
                                android:id="@+id/availability_progress"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                app:background_color="@color/colorWhite"
                                app:progress_start_color="#ff0000"
                                app:progress_end_color="#ff0000"
                                app:progress_background_color="@color/colorWhite"
                                app:progress_text_color="@color/colorBlack"
                                app:draw_progress_text="false"
                                app:progress_text_size="24dp"
                                app:style="solid"
                                android:progress="0"/>
                        <TextView
                                android:id="@+id/tv_availability_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="0%"
                                android:textSize="27sp"
                                android:textColor="#000"/>
                    </RelativeLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/performance"
                            android:textSize="15sp"
                            android:textColor="@color/colorWhite2"
                            android:background="#383838" />
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <com.dinuscxj.progressbar.CircleProgressBar
                                android:id="@+id/performance_progress"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                app:background_color="@color/colorWhite"
                                app:progress_start_color="#ff0000"
                                app:progress_end_color="#ff0000"
                                app:progress_background_color="@color/colorWhite"
                                app:progress_text_color="@color/colorBlack"
                                app:draw_progress_text="false"
                                app:progress_text_size="24dp"
                                app:style="solid"
                                android:progress="0"/>
                        <TextView
                                android:id="@+id/tv_performance_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="0%"
                                android:textSize="27sp"
                                android:textColor="#000"/>
                    </RelativeLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/quality"
                            android:textSize="15sp"
                            android:textColor="@color/colorWhite2"
                            android:background="#383838" />
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <com.dinuscxj.progressbar.CircleProgressBar
                                android:id="@+id/quality_progress"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                app:background_color="@color/colorReadonly2"
                                app:progress_start_color="#ff0000"
                                app:progress_end_color="#ff0000"
                                app:progress_background_color="@color/colorWhite"
                                app:progress_text_color="@color/colorBlack"
                                app:draw_progress_text="false"
                                app:progress_text_size="24dp"
                                app:style="solid"
                                android:progress="0"/>
                        <TextView
                                android:id="@+id/tv_quality_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="0%"
                                android:textSize="27sp"
                                android:textColor="#000"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <include layout="@layout/layout_bottom_info_3"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
