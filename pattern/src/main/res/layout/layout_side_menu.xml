<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/colorBackgroundSide">

<!--        <View-->
<!--                android:layout_width="match_parent" android:layout_height="1dp"-->
<!--                android:background="@color/colorBlack" />-->
        <ImageView
                android:id="@+id/img_btn_home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="24dp"
                android:src="@drawable/btn_side_icon_home_on"/>
        <View
                android:layout_width="match_parent" android:layout_height="1dp"
                android:background="@color/colorBlack" />
        <ImageView
                android:id="@+id/img_btn_push_to_app"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="27dp"
                android:src="@drawable/btn_side_icon_push" />
        <View
                android:layout_width="match_parent" android:layout_height="1dp"
                android:background="@color/colorBlack" />
        <ImageView
                android:id="@+id/img_btn_actual_count_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="29dp"
                android:src="@drawable/btn_side_icon_actual_count_edit" />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
        <ImageView
                android:id="@+id/img_btn_downtime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="29dp"
                android:src="@drawable/btn_side_icon_downtime" />
        <View
                android:layout_width="match_parent" android:layout_height="1dp"
                android:background="@color/colorBlack" />
        <ImageView
                android:id="@+id/img_btn_defective_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="29dp"
                android:src="@drawable/btn_side_icon_defective_info" />
        <View
                android:layout_width="match_parent" android:layout_height="1dp"
                android:background="@color/colorBlack" />
        <ImageView
                android:id="@+id/img_btn_worksheet"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="29dp"
                android:src="@drawable/btn_side_icon_worksheet" />
        <View
                android:layout_width="match_parent" android:layout_height="1dp"
                android:background="@color/colorBlack" />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/transparent">
            <ImageView
                    android:id="@+id/img_btn_component"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="28dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_side_icon_component" />
            <TextView
                    android:id="@+id/tv_component_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/shape_orange_round_button"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingRight="6dp"
                    android:paddingLeft="6dp"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone"/>
        </RelativeLayout>

        <View
                android:layout_width="match_parent" android:layout_height="1dp"
                android:background="@color/colorBlack" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/transparent">
            <ImageView
                    android:id="@+id/img_btn_production_report"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="26dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_side_icon_product_list" />
            <TextView
                    android:id="@+id/tv_report_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/shape_orange_round_button"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingRight="6dp"
                    android:paddingLeft="6dp"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>
