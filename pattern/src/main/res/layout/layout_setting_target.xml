<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBackground">

    <TextView style="@style/table_title" android:text="@string/title_target_type" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

        <!--From Cycle Time-->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_setting_target_type_cycle_time"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:background="@color/colorBackgroundTop"
                    android:text="@string/label_from_cycle_time"
                    android:textSize="20sp"
                    android:textColor="@color/colorGray"
                    android:textStyle="bold" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="24dp"
                    android:background="@color/colorButtonDefault"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/img_cycle_time_accumulate"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/btn_icon_check_box"/>
                    <TextView
                            android:id="@+id/tv_cycle_time_accumulate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/button_accumulation_by_start"
                            android:textSize="22sp"
                            android:textColor="@color/colorGray"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/img_cycle_time_shifttotal"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/btn_icon_check_box"/>
                    <TextView
                            android:id="@+id/tv_cycle_time_shifttotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/button_total_target_per_shift"
                            android:textSize="22sp"
                            android:textColor="@color/colorGray"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--From Server-->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_setting_target_type_server"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:background="@color/colorBackgroundTop"
                    android:text="@string/label_from_server"
                    android:textSize="20sp"
                    android:textColor="@color/colorGray"
                    android:textStyle="bold" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="24dp"
                    android:background="@color/colorButtonDefault"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/img_server_accumulate"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/btn_icon_check_box"/>
                    <TextView
                            android:id="@+id/tv_server_accumulate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/button_accumulation_by_start"
                            android:textSize="22sp"
                            android:textColor="@color/colorGray"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/img_server_shifttotal"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/btn_icon_check_box"/>
                    <TextView
                            android:id="@+id/tv_server_shifttotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/button_total_target_per_shift"
                            android:textSize="22sp"
                            android:textColor="@color/colorGray"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--From Device-->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_setting_target_type_manual"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:background="@color/colorBackgroundTop"
                    android:text="@string/label_from_device"
                    android:textSize="20sp"
                    android:textColor="@color/colorGray"
                    android:textStyle="bold" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="24dp"
                    android:background="@color/colorButtonDefault"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/img_device_accumulate"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/btn_icon_check_box"/>
                    <TextView
                            android:id="@+id/tv_device_accumulate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/button_accumulation_by_start"
                            android:textSize="22sp"
                            android:textColor="@color/colorGray"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/img_device_shifttotal"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/btn_icon_check_box"/>
                    <TextView
                            android:id="@+id/tv_device_shifttotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/button_total_target_per_shift"
                            android:textSize="22sp"
                            android:textColor="@color/colorGray"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


