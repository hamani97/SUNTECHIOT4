<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".HomeFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/colorBackground">

            <LinearLayout
                    android:id="@+id/ll_main_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="12dp"
                            android:text="SUNTECH IoT System"
                            android:textSize="40sp"
                            android:textColor="#fff"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="for Pattern"
                            android:textSize="26sp"
                            android:textColor="@color/colorWhite"/>

                    <TextView
                            android:id="@+id/tv_app_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="."
                            android:textSize="26sp"
                            android:textColor="@color/colorWhite"/>

                </LinearLayout>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                    <Button
                            android:id="@+id/btn_count_view"
                            android:layout_width="400dp"
                            android:layout_height="180dp"
                            android:layout_margin="8dp"
                            android:background="#db4030"
                            android:stateListAnimator="@null"
                            android:text="@string/button_count_view"
                            android:textSize="38sp"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"/>

                    <Button
                            android:id="@+id/btn_component_info"
                            android:layout_width="400dp"
                            android:layout_height="180dp"
                            android:layout_margin="8dp"
                            android:background="@color/colorReadonly"
                            android:stateListAnimator="@null"
                            android:text="@string/button_design_info"
                            android:textColor="@color/colorGray"
                            android:textSize="38sp"
                            android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                    <!--#3f8cd6-->
<!--                    @color/colorWhite-->
                    <Button
                            android:id="@+id/btn_work_info"
                            android:layout_width="400dp"
                            android:layout_height="180dp"
                            android:layout_margin="8dp"
                            android:background="@color/colorReadonly"
                            android:stateListAnimator="@null"
                            android:text="@string/button_operator_detail"
                            android:textSize="38sp"
                            android:textColor="@color/colorGray"
                            android:textStyle="bold"/>

                    <Button
                            android:id="@+id/btn_setting_view"
                            android:layout_width="400dp"
                            android:layout_height="180dp"
                            android:layout_margin="8dp"
                            android:background="#61c536"
                            android:stateListAnimator="@null"
                            android:text="@string/button_setting"
                            android:textSize="38sp"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/layout_bottom_info"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
